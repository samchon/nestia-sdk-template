{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../bin",
    "paths": {
      "@ORGANIZATION/PROJECT-api": ["../src"],
      "@ORGANIZATION/PROJECT-api/": ["../src"],
      "@ORGANIZATION/PROJECT-api/*": ["../src/*"],
    },
    "plugins": [
      { "transform": "typia/lib/transform" },
      { "transform": "typescript-transform-paths" },
    ],
  },
  "include": [
    ".", 
    "../src",
  ],
}